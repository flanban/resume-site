!!!
%html
  %head
    %title John Fuller
    %meta{:content => "initial-scale=1, maximum-scale=1", :name => "viewport"}
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,300italic,400,900", :rel => "stylesheet", :type => "text/css"}

    
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{:class => "#{"#{controller.action_name} #{@body_class}".strip} clearfix"}
    = yield
  :javascript
    jQuery(document).ready(function($) {
      $(".resume-slider-first").royalSlider({
        controlNavigation:'none',
        imageScaleMode:'fit',
        imageScalePadding:0,
        imageAlignCenter:false,
        slidesSpacing:0,
        globalCaption:true,
        loop:true,
        autoPlay: {
          enabled: true,
          pauseOnHover: true,
          delay:6000,
        }
      });
      $(".resume-slider").royalSlider({
        controlNavigation:'none',
        imageScaleMode:'fit',
        imageScalePadding:0,
        imageAlignCenter:true,
        slidesSpacing:0,
        globalCaption:true,
      });
    });
