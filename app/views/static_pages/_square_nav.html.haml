%ul#square-nav

  %li.my-square.nav-box
    =link_to('about', about_path)
    %span about

  %li#work.square-normal.nav-box
    %a{:href => "#"} work
    %span work
    .close-btn.drop.nav-box.hidden
      %a{:href => "#"} close
    #featured-project.drop.nav-box.hidden
      %h5 featured
      =link_to('sbnu', featured_sbnu_path)
    #recent-project.drop.nav-box.hidden
      %h5 recent
      =link_to 'vakko fashion', { :controller => "projects", :action => "vakko" }, :remote => true, :class => 'project-link'
    #other-projects.drop.nav-box.hidden
      =link_to 'other projects', { :controller => "projects", :action => "nate" }, :remote => true, :class => 'project-link'

  %li#contact.square-normal.nav-box
    %a{:href => "#"} contact
    %span contact
    .close-btn.drop.nav-box.hidden
      %a{:href => "#"} close
    #contact-box.hidden
      %p send me a message
      %textarea
  %li#contact-form.hidden.square-normal.nav-box
    %p write me here
    textfield
    submit button

  %li#resume.square-normal.nav-box
    =link_to('resume', resume_path)
    %span resume

= render "shared/project_slider"
